{
    "name": "Dev Container:Base - Python 3.9-slim",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                // Language Support - Python
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",

                // Frameworks - Flask & Django
                "RabinHansda.flask-builder",
                "batisteo.vscode-django",

                // Tools - Documentation & Code Generation
                "ms-toolsai.jupyter",
                "ms-vscode.speech",
                "VisualStudioExptTeam.vscodeintellicode",
                
                // Linters
                "redhat.vscode-yaml",
                "trunk.io"
            ]
        }
    }
}